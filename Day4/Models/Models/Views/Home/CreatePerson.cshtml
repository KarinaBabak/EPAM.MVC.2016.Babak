@using Models.Models
@model Person
@{
    ViewBag.Title = "CreatePerson";
}

<h2>CreatePerson</h2>

@using (Html.BeginForm())
{

    <div class="row">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.FirstName, new { @class = "col-xs-3" })
    </div>
    <p></p>
    
    <div class="row">
        @Html.LabelFor(m => m.LastName, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.LastName, new { @class = "col-xs-3" })
    </div>
    <p></p>
    
    <div class="row">
        @Html.LabelFor(m => m.BirthDate, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.BirthDate, new { @class = "col-xs-3" })
    </div>
    <p></p>

    <div class="row">
        @Html.LabelFor(m => m.Role, new { @class = "col-xs-2" })
        @Html.EnumDropDownListFor(m => m.Role, new { @class = "col-xs-1" })       
    </div>
    <p></p>
    <h4>Address</h4>
    <div class="row">
        @Html.LabelFor(m => m.HomeAddress.Country, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.HomeAddress.Country, new { @class = "col-xs-3" })
    </div>
    <p></p>

    <div class="row">
        @Html.LabelFor(m => m.HomeAddress.City, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.HomeAddress.City, new { @class = "col-xs-3" })
    </div>
    <p></p>

    <div class="row">
        @Html.LabelFor(m => m.HomeAddress.PostalCode, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.HomeAddress.PostalCode, new { @class = "col-xs-3" })
    </div>
    <p></p>

    <div class="row">
        @Html.LabelFor(m => m.HomeAddress.Line1, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.HomeAddress.Line1, new { @class = "col-xs-3" })
    </div>
    <p></p>
    
    <div class="row">
        @Html.LabelFor(m => m.HomeAddress.Line2, new { @class = "col-xs-2" })
        @Html.EditorFor(m => m.HomeAddress.Line2, new { @class = "col-xs-3" })
    </div>
    <p></p>

   

    <button type="submit">Submit</button>
}

