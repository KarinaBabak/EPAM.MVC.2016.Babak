@using Day3.HomeTask.Models

@model Day3.HomeTask.Models.Person

@{
    ViewBag.Title = "Index";
}

@using (@Html.BeginForm("Index", "Home"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-error" })

    <div class="editor-label">
        @Html.LabelFor(m => m.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Name)
        </div>

        <div class="editor-field">
            @Html.DropDownListFor(model => model.Role,
            new SelectList(Enum.GetNames(typeof(Faction))), string.Empty)
        </div>
        <p>
            <input type="submit" value="Send" />
        </p>
}


